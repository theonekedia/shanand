<h1>Today's Trade</h1>

<table id="tradeIndex" class="table table-striped table-bordered">
  <thead>
    <tr>
          <th> Company Name </th>
          <th> OPEN </th>
          <th> HIGH </th>
          <th> LOW </th>
          <th> CLOSE </th>
          <th> % Change </th>
          <th> 52 Wk HIGH </th>
          <th> 52 Wk LOW </th>
          <th> Book Value </th>
          <th> Market Cap (Cr) </th>
          <th> PREVIOUS CLOSE </th>
          <th> Graham Value </th>
          <th> EPS </th>
          <th> P/E </th>
          <th> P/B </th>
          <th> Proximity (%) to Low</th>
    </tr>
  </thead>


  <tbody>
    <% @day_tradings.each do |day_trading| %>
    <% next if day_trading.today_close.nil? %>
      <tr>
      	<td><%= link_to day_trading.nse_script_name, company_details_path(day_trading.nse_script_name) %></td>
        <td class="text-right"><%= day_trading.today_open %></td>
      	<td class="text-right"><%= day_trading.today_high %></td>
      	<td class="text-right"><%= day_trading.today_low %></td>
    <% if day_trading.perc_change < 0 %>  
        <td class="text-right" style="color:red"><%= day_trading.today_close %></td>
        <td class="dt_perchange text-right" style="color:red"><%= day_trading.perc_change.nil? ? nil : day_trading.perc_change.round(2) %></td>
    <% else %>  
        <td class="text-right" style="color:green"><%= day_trading.today_close %></td>
        <td class="dt_perchange text-right" style="color:green"><%= day_trading.perc_change.nil? ? nil : day_trading.perc_change.round(2) %></td>
    <% end %>
        <td class="text-right"><%= day_trading.f2_week_low.round(2) %></td>
        <td class="text-right"><%= day_trading.f2_week_high.round(2) %></td>
        <td class="text-right"><%= day_trading.book_value %></td>
        <td class="dt_marcap text-right"><%= (day_trading.market_cap / 100).round(2) %></td>
        <td class="text-right"><%= day_trading.pre_day_close %></td>
        <td class="text-right"><%= day_trading.graham_fvp.nil? ? nil : day_trading.graham_fvp.round(2) %></td>
        <td class="text-right"><%= day_trading.eps %></td>
        <td class="text-right"><%= day_trading.pe_ratio.nil? ? nil : day_trading.pe_ratio.round(2) %></td>
        <td class="text-right"><%= day_trading.book_value.nil? ? nil : (day_trading.today_close / day_trading.book_value).round(2) %></td> 
        <td class="text-right"><%= ((day_trading.today_close - day_trading.f2_week_low) / (day_trading.f2_week_high - day_trading.f2_week_low)).round(2) %></td>  
 	    </tr>
    <% end %>
  </tbody>
</table>
