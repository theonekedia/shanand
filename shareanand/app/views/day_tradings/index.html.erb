<p id="notice"><%= notice %></p>
<%= will_paginate @day_tradings %>
<h1>Listing Day Tradings</h1>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
          <th> Company Name </th>
          <th> OPEN </th>
          <th> HIGH </th>
          <th> LOW </th>
          <th> CLOSE </th>
          <th> 52 Wk HIGH </th>
          <th> 52 Wk LOW </th>
          <th> Book Value </th>
          <th> PREVIOUS CLOSE </th>
          <th> Graham Value </th>
          <th> <%= sortable("eps","EPS") %></th>
          <th> P/E </th>
          <th> P/B </th>
          <th> <%= sortable("perc_change", "% Change") %> </th>
          <th> Proximity (%) </th>
          
          

    </tr>
  </thead>
	

  <tbody>
    <% @day_tradings.each do |day_trading| %>
    <% next if day_trading.today_close.nil? %>
      <tr>
      	<td><%= link_to day_trading.nse_script_name, company_details_path(day_trading.nse_script_name) %></td>
      	<td><%= day_trading.today_open %></td>
      	<td><%= day_trading.today_high %></td>
      	<td><%= day_trading.today_low %></td>
      	<td><%= day_trading.today_close %></td>
        <td><%= day_trading.f2_week_low.round(2) %></td>
        <td><%= day_trading.f2_week_high.round(2) %></td>
        <td><%= day_trading.book_value %></td>
      	<td><%= day_trading.pre_day_close %></td>
        <td><%= day_trading.graham_fvp.nil? ? nil : day_trading.graham_fvp.round(2) %></td>
        <td><%= day_trading.eps %></td>
        <td><%= day_trading.pe_ratio.nil? ? nil : day_trading.pe_ratio.round(2) %></td>
        <td><%= day_trading.book_value.nil? ? nil : (day_trading.today_close / day_trading.book_value).round(2) %></td>
        
        <td><%= day_trading.perc_change.nil? ? nil : day_trading.perc_change.round(2) %></td>
<td><%= ((day_trading.today_close - day_trading.f2_week_low) / (day_trading.f2_week_high - day_trading.f2_week_low)).round(2) %></td>  
      	<%# if day_trading.today_close < day_trading.today_open %>
			<%# x= day_trading.today_close + day_trading.today_high + 2 * day_trading.today_low %>
		
		
			
		<%# elsif day_trading.today_close > day_trading.today_open %>
			<%# x= day_trading.today_close + 2 * day_trading.today_high + day_trading.today_low %>	
		
			
      	<%# elsif day_trading.today_close = day_trading.today_open %>
			<%# x= 2 * day_trading.today_close + day_trading.today_high + day_trading.today_low %>
      	
      	
      	<%# end %>
      	
      
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @day_tradings %>
<br>
