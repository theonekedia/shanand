<div class="row">
<h3> Trading Details </h3>
<div class="col-md-4">
<aside class="span4">
<section>
        <p>Open        : <%= @day_trading.today_open %></p>
        <p>High        : <%= @day_trading.today_high %></p>
        <p>Low         : <%= @day_trading.today_low %></p>
        <p>Close       : <%= @day_trading.today_close %></p>
        <p>Prev.Close  : <%= @day_trading.pre_day_close %></p>
        <p>% Change    : <%= @day_trading.perc_change %></p>
</div>        
<div class="col-md-4">
        <p>Graham Value: <%= @day_trading.graham_fvp.round(2) %></p>
        <p>EPS         : <%= @day_trading.eps %></p>
        <p>P/E         : <%= @day_trading.pe_ratio.round(2) %></p>
        <p>Book Value  : <%= @day_trading.book_value %></p>
        <p>52 Week High: <%= @script_meta_datum.f2_week_high.round(2) %></p>
        <p>52 Week Low : <%= @script_meta_datum.f2_week_low.round(2) %></p>
        <p>Volume      : <%= @day_trading.tot_shares_traded %></p>
        

</div>  
<div class="col-md-4">
        <% pivot = (@day_trading.today_close + @day_trading.today_high + @day_trading.today_low) / 3 %>
         <% resistance_1 = pivot.round(2) * 2 - @day_trading.today_low.round(2) %>
         <% support_1 = pivot.round(2) * 2 - @day_trading.today_high.round(2) %>

         <% resistance_2 = pivot.round(2) + (@day_trading.today_high - @day_trading.today_low).round(2) %>
         <% support_2 = pivot.round(2) - (@day_trading.today_high - @day_trading.today_low).round(2) %>
                
         <p> Pivot : <%= pivot.round(2) %></p>   
         <p> Resistance 1 : <%= resistance_1 %></p>
         <p> Resistance 2 : <%= resistance_2 %></p>
         <p> Support 1 : <%= support_1 %></p>
         <p> Support 2 : <%= support_2 %></p>

        <% if @day_trading.today_close < @day_trading.today_open %>
                <% x= @day_trading.today_close + @day_trading.today_high + 2 * @day_trading.today_low %>
                <p>Predictred High : <%= (x/2 - @day_trading.today_low).round(2) %></p>
                <p>Predictred Low  :<%= (x/2 - @day_trading.today_high).round(2) %></p>    
                        
        <% elsif @day_trading.today_close > @day_trading.today_open %>
                <% x= @day_trading.today_close + 2 * @day_trading.today_high + @day_trading.today_low %>     
                <p>Predictred High : <%= (x/2 - @day_trading.today_low).round(2) %></p>
                <p>Predictred Low  :<%= (x/2 - @day_trading.today_high).round(2) %></p>               

        <% elsif @day_trading.today_close = @day_trading.today_open %>
               <% x= 2 * @day_trading.today_close + @day_trading.today_high + @day_trading.today_low %>
                <p>Predictred High : <%= (x/2 - @day_trading.today_low).round(2) %></p>
                <p>Predictred Low  :<%= (x/2 - @day_trading.today_high).round(2) %></p>    
        <% end %>

</div>    
</div>

